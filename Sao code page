  <script>
    const characters = [
      {
        name: "คิริโตะ (Kirito)",
        info: "พระเอกของเรื่อง SAO นักดาบเดี่ยว มีทักษะการเล่นเกมขั้นสูง"
      },
      {
        name: "อาสึนะ (Asuna)",
        info: "ผู้เล่นหญิงที่เก่งมากใน SAO และเป็นคนสำคัญของคิริโตะ"
      },
      {
        name: "ยูอิ (Yui)",
        info: "AI ที่มีจิตใจคล้ายมนุษย์ เป็นเสมือนลูกของคิริโตะกับอาสึนะ"
      },
      {
        name: "อลิซ (Alice)",
        info: "อัศวินในโลก Underworld จากภาค Alicization"
      }
    ];

    const container = document.getElementById("encyclopedia");

    characters.forEach(char => {
      const div = document.createElement("div");
      div.className = "card";
      div.innerHTML = `<h3>${char.name}</h3><p>${char.info}</p>`;
      container.appendChild(div);
    });
  </script>
