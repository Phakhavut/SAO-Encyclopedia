<body class="bg-gray-100">
  <header class="bg-purple-700 text-white text-center py-6 shadow-lg">
    <h1 class="text-3xl font-bold">🌐 สารานุกรม SAO</h1>
  </header>

  <main class="p-6 max-w-4xl mx-auto">
    <div id="encyclopedia" class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3"></div>
  </main>

  <script>
    const characters = [
      { name: "คิริโตะ (Kirito)", info: "นักดาบเดี่ยวใน SAO มีทักษะการเล่นเกมขั้นสูง" },
      { name: "อาสึนะ (Asuna)", info: "ผู้เล่นหญิงอันดับต้น ๆ ใน SAO มีฉายาว่า 'Flash'" },
      { name: "ยูอิ (Yui)", info: "AI ที่เสมือนลูกสาวของคิริโตะและอาสึนะ" },
    ];

    const container = document.getElementById("encyclopedia");

    characters.forEach(char => {
      const card = document.createElement("div");
      card.className = "bg-white rounded-xl shadow-md p-4 hover:shadow-xl transition";
      card.innerHTML = `
        <h2 class="text-xl font-bold text-purple-700 mb-2">${char.name}</h2>
        <p class="text-gray-700">${char.info}</p>
      `;
      container.appendChild(card);
    });
  </script>
